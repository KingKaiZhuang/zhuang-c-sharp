        </GroupBox>
        
        <StackPanel x:Name="menu_item" Margin="17,79,174,173" Background="#FFE5FFEB" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        
        <ScrollViewer Margin="17,283,174,10">
            <TextBlock x:Name="resultBlock" />
        </ScrollViewer>
        <Button Content="送出" HorizontalAlignment="Left" Margin="484,21,0,0" VerticalAlignment="Top" Height="41" Width="79" Click="send_button"/>
    </Grid>
</Window>
