<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="OrderItem" Margin="27,14,274,211" Background="#FFFCFFDF" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,0.5" >
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.445"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.659"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <StackPanel Orientation="Horizontal">
                <Label Width="165" Content="紅茶大杯" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code"/>
                <Label Width="165" Content="60元" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code" Foreground="#FFFF8787"/>
                <TextBox Width="100" TextChanged="TextBox_TextChanged" FontSize="18" TextAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Width="165" Content="紅茶小杯" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code"/>
                <Label Width="165" Content="40元" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code" Foreground="#FFFF8787"/>
                <TextBox Width="100" TextChanged="TextBox_TextChanged" FontSize="18" TextAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Width="165" Content="綠茶大杯" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code"/>
                <Label Width="165" Content="60元" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code" Foreground="#FFFF8787"/>
                <TextBox Width="100" TextChanged="TextBox_TextChanged" FontSize="18" TextAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Width="165" Content="綠茶小杯" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code"/>
                <Label Width="165" Content="40元" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code" Foreground="#FFFF8787"/>
                <TextBox Width="100" TextChanged="TextBox_TextChanged" FontSize="18" TextAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Width="165" Content="咖啡大杯" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code"/>
                <Label Width="165" Content="80元" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code" Foreground="#FFFF8787"/>
                <TextBox Width="100" TextChanged="TextBox_TextChanged" FontSize="18" TextAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Width="165" Content="咖啡小杯" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code"/>
                <Label Width="165" Content="50元" FontSize="14" FontWeight="Bold" FontFamily="Cascadia Code" Foreground="#FFFF8787"/>
                <TextBox Width="100" TextChanged="TextBox_TextChanged" FontSize="18" TextAlignment="Right"/>
            </StackPanel>
        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Left" Margin="235,56,0,0" VerticalAlignment="Top" Height="63" Width="145" Grid.Column="1" Click="OderButton_Click"/>
        <TextBlock x:Name="TextBlock1" HorizontalAlignment="Left" Margin="28,241,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="176" Width="497" Background="#FFFFBABA" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
