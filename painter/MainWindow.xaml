<Window x:Class="painter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:painter"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="2023 wpf painter" Height="479" Width="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <Menu DockPanel.Dock="Top" Height="25">
                <MenuItem Header="檔案">
                    <MenuItem Header="新增畫布">
                        
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="工具"></MenuItem>
            </Menu>
            <ToolBarTray DockPanel.Dock="Top" Height="35">
                <ToolBar HorizontalAlignment="Center" VerticalAlignment="Center" Width="396" Height="35" Background="#FFF1EEFD">
                    <Label Content="筆刷色彩" VerticalAlignment="Center" Width="80" HorizontalContentAlignment="Center" />
                    <xctk:ColorPicker x:Name="strokeColorPicker" Width="130" DisplayColorAndName="True"/>
                    <Slider x:Name="colorSlider" Width="100" Minimum="1" Maximum="10" Value="1" HorizontalAlignment="Center" VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="colorSlider_ValueChanged" />
                    <Label Content="{Binding Value, ElementName=colorSlider}" Width="30" VerticalAlignment="Center" HorizontalContentAlignment="Center" />
                </ToolBar>
                <ToolBar Width="250">
                    <RadioButton Width="60" Content="直線" Tag="Line" Click="shape_click"            
                    HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" />
                    <RadioButton Width="60" Content="三角形" Tag="Rectangle" Click="shape_click"            
                    HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" />
                    <RadioButton Width="60" Content="橢圓" Tag="Circle" Click="shape_click"            
                    HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" />
                </ToolBar>
            </ToolBarTray>
            <Canvas x:Name="myCanvas" DockPanel.Dock="Top" Background="#FFFFF4CD" Height="363" MouseLeftButtonDown="myCanvas_MouseLeftButtonDown"/>
            <StatusBar x:Name="myStatusBar" DockPanel.Dock="Top" Height="41"/>

        </DockPanel>
    </Grid>
</Window>
