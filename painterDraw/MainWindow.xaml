<Window x:Class="painterDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:painterDraw"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="2023 wpf painter" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <Menu Height="25" DockPanel.Dock="Top">
                <MenuItem Header="檔案">
                    <MenuItem Header="新增畫布" />
                </MenuItem>
                <MenuItem Header="工具" />
            </Menu>
            <ToolBarTray DockPanel.Dock="Top" Height="30">
                <ToolBar Width="200"  Height="30" HorizontalAlignment="Center">
                    <Label Content="筆刷色彩" />
                    <xctk:ColorPicker Width="100"/>
                </ToolBar>
            </ToolBarTray>
        </DockPanel>

    </Grid>
</Window>
